@model IEnumerable<AgendaCompromissos.Models.Consultas>
@{
    ViewData["Title"] = "Consultas";
}
<h2>@ViewData["Title"]</h2>
<p>
    <a asp-action="Create" class="btn btn-default">Nova Consulta</a>
</p>
<table class="table table-striped table-hover">
    <thead>
        <tr class="success">
            <th>
                @Html.DisplayNameFor(model => model.NomeDoPaciente)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataNascimentoPaciente)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataHoraInicial)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataHoraFinal)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Observacoes)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NomeDoPaciente)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DataNascimentoPaciente)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DataHoraInicial)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DataHoraFinal)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Observacoes)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ConsultaId">Editar</a> |
                    <a asp-action="Details" asp-route-id="@item.ConsultaId">Detalhes</a> |
                    <a asp-action="Delete" asp-route-id="@item.ConsultaId">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>